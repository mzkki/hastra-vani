<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="24dp">

    <!-- Toolbar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_arrow_back_24"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Verifikasi Kode"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- Illustration -->
    <ImageView
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/verification"
        android:contentDescription="Verification Illustration" />

    <!-- OTP Input Fields -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/otp1"
            style="@style/OTPEditText" />

        <EditText
            android:id="@+id/otp2"
            style="@style/OTPEditText" />

        <EditText
            android:id="@+id/otp3"
            style="@style/OTPEditText" />

        <EditText
            android:id="@+id/otp4"
            style="@style/OTPEditText" />

        <EditText
            android:id="@+id/otp5"
            style="@style/OTPEditText" />

        <EditText
            android:id="@+id/otp6"
            style="@style/OTPEditText" />

    </LinearLayout>

    <!-- Resend Button -->
    <TextView
        android:id="@+id/btnResend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Kirim Ulang"
        android:textColor="#FF0000"
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <!-- Verify Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnVerify"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/bg_button_purple"
        android:text="Verifikasi"
        android:textColor="@color/white"
        android:textAllCaps="false" />

</LinearLayout>